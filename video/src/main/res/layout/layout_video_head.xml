<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:paddingTop="16dp"
        android:text="@string/tip_text"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="@string/tip_text"
        android:textColor="@color/textColor2"
        android:textSize="14sp" />


    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_video_d_like_n"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="16dp"
            android:text="点赞"
            android:textColor="@color/textColor2" />


        <TextView
            android:id="@+id/btn_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_video_d_download"
            android:textSize="14sp"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="下载"
            android:textColor="@color/textColor2" />


        <TextView
            android:id="@+id/btn_reward"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_video_d_reward"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:padding="16dp"
            android:textSize="14sp"
            android:text="打赏"
            android:textColor="@color/textColor2" />


        <TextView
            android:id="@+id/btn_forward"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_video_d_collection_forward"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="16dp"
            android:text="转发"
            android:textColor="@color/textColor2" />


        <TextView
            android:id="@+id/btn_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_video_d_collection_n"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="收藏"
            android:textColor="@color/textColor2" />

    </LinearLayout>


    <include layout="@layout/view_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:paddingLeft="14dp"
        android:paddingRight="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="centerCrop"
            app:riv_oval="true" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/tip_text"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/shape_red_dot" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="@string/tip_text"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_follow_vidoe_recommend"
            android:paddingHorizontal="14dp"
            android:paddingVertical="5dp"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>